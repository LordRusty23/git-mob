{
  "name": "git-mob",
  "version": "2.3.1",
  "description": "CLI tool for adding co-authors to commits.",
  "scripts": {
    "setup": "npm i --ignore-scripts",
    "build": "rimraf dist && node ../../build/main.js",
    "checks": "npm run test && npm run js-lint",
    "test:w": "npm run test:w --workspaces",
    "test": "npm run test --workspaces",
    "install": "npm install --ignore-scripts",
    "js-lint": "xo",
    "preversion": "npm run checks",
    "postversion": "git push --follow-tags",
    "prepack": "npm run build -- -m"
  },
  "workspaces":[
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:rkotze/git-mob.git"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "cli",
    "cli-app",
    "git-pair",
    "git-duet",
    "git",
    "github",
    "co-author",
    "pairing",
    "pair programming",
    "mob programming",
    "extreme programming",
    "xp",
    "social coding"
  ],
  "author": "Richard Kotze",
  "license": "MIT",
  "contributors": [
    {
      "name": "Richard Kotze",
      "url": "https://github.com/rkotze"
    },
    {
      "name": "Dennis Ideler",
      "url": "https://github.com/dideler"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^18.7.14",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.15.6",
    "glob": "^8.0.3",
    "rimraf": "^3.0.2",
    "tempy": "^3.0.0",
    "typescript": "^4.8.2",
    "xo": "^0.52.3"
  },
  "xo": {
    "space": true,
    "ignores": [
      "bin",
      "dist",
      "test-helpers",
      "*.d.ts"
    ],
    "prettier": true,
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "object-curly-spacing": "off",
      "curly": [
        "error",
        "multi-line"
      ],
      "comma-dangle": "off",
      "ava/no-skip-test": "off",
      "linebreak-style": "off",
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "ignore",
            ":": "ignore"
          }
        }
      ],
      "valid-jsdoc": [
        "warn",
        {
          "requireParamDescription": false,
          "requireReturn": false
        }
      ],
      "import/extensions": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/prefer-module": 0,
      "unicorn/no-process-exit": 0,
      "node/prefer-global/process": 0,
      "n/prefer-global/process": 0,
      "n/file-extension-in-import": 0,
      "object-shorthand": 0,
      "arrow-body-style": 0,
      "capitalized-comments": 0,
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "src/**/*.spec.*"
          ]
        }
      ],
      "@typescript-eslint/object-curly-spacing": "off",
      "@typescript-eslint/comma-dangle": "off",
      "@typescript-eslint/prefer-nullish-coalescing": 0
    }
  }
}
